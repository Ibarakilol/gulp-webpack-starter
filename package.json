{
  "name": "gulp-webpack-starter",
  "version": "1.12.1",
  "description": "Production-ready Gulp/Webpack starter.",
  "scripts": {
    "dev": "gulp",
    "build": "gulp build",
    "clean": "gulp clean",
    "bem": "bem create $* -l src/components",
    "lint": "eslint src/js/index.js",
    "lint:fix": "eslint src/js/index.js --fix --color",
    "stylelint": "stylelint src/**/*.scss",
    "stylelint:fix": "stylelint src/**/*.scss --fix --color"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Ibarakilol/gulp-webpack-starter.git"
  },
  "keywords": [
    "html",
    "scss",
    "js",
    "bem",
    "gulp",
    "webpack"
  ],
  "author": "Nikita Lopanov",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Ibarakilol/gulp-webpack-starter/issues"
  },
  "homepage": "https://github.com/Ibarakilol/gulp-webpack-starter#readme",
  "dependencies": {
    "normalize.css": "^8.0.1",
    "smooth-scroll": "^16.1.3"
  },
  "devDependencies": {
    "@babel/core": "^7.12.13",
    "@babel/preset-env": "^7.12.13",
    "babel-loader": "^8.2.2",
    "bem-tools-core": "bem-tools/bem-tools-core",
    "bem-tools-create": "bem-tools/bem-tools-create",
    "browser-sync": "^2.26.14",
    "del": "^6.0.0",
    "eslint": "^7.23.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-plugin-import": "^2.22.1",
    "gulp": "^4.0.2",
    "gulp-autoprefixer": "^7.0.1",
    "gulp-clean-css": "^4.3.0",
    "gulp-file-include": "^2.3.0",
    "gulp-imagemin": "^7.1.0",
    "gulp-newer": "^1.4.0",
    "gulp-rename": "^2.0.0",
    "gulp-sass": "^4.1.0",
    "husky": "^6.0.0",
    "lint-staged": "^10.5.4",
    "stylelint": "^13.12.0",
    "stylelint-config-airbnb": "^0.0.0",
    "stylelint-config-property-sort-order-smacss": "^7.0.0",
    "stylelint-order": "^4.1.0",
    "stylelint-scss": "^3.19.0",
    "webpack": "^5.21.1",
    "webpack-cli": "^4.5.0",
    "webpack-stream": "^6.1.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "npm run lint:fix"
    ],
    "*.scss": [
      "npm run stylelint:fix"
    ]
  }
}
